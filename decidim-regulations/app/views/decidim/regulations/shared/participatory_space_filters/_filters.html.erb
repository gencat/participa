<%= filter_form_for filter do |form| %>
  <div class="columns mediumlarge-6 large-5">
    <%= scopes_picker_filter form, :scope_id, checkboxes_on_top %>
  </div>
  <div class="columns mediumlarge-6 large-5">
    <%= form.types_select :type_id,
                          types_for_select(current_organization),
                          legend_title: t(".types"),
                          label: false,
                          selected: filter.type_id,
                          include_blank: t(".select_a_type") %>
  </div>
<% end %>
