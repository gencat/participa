<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t "decidim.admin.titles.themes" %> <%= link_to t("actions.add", scope: "decidim.admin"), "/admin/themes/new", class: 'button tiny button--title' if allowed_to? :create, :theme %></h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
        <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.scope.fields.name", scope: "decidim.admin") %></th>
            <th><%= t("themes.fields.created_at", scope: "decidim.admin") %></th>
            <th><%= t("themes.fields.updated_at", scope: "decidim.admin") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @themes.each do |theme| %>
            <tr>
              <td>
                <%= translated_attribute(theme.name) %><br />
              </td>
              <td>
                <%= l theme.created_at, format: :short %>
              </td>
              <td>
                <%= l theme.updated_at, format: :short %>
              </td>
              <td class="table-list__actions">
                <% if allowed_to? :update, :theme, theme: theme %>
                  <%= icon_link_to "pencil", "/admin/themes/"+theme.id.to_s+"/edit", t("actions.edit", scope: "decidim.admin"), class: "action-icon--edit", method: :get, data: {} %>
                <% end %>
                <% if allowed_to? :destroy, :theme, theme: theme %>
                  <%= icon_link_to "circle-x", "/admin/themes/"+theme.id.to_s, t("actions.destroy", scope: "decidim.admin"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", scope: "decidim.admin") } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
