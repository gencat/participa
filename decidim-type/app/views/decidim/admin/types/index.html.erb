<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t "decidim.admin.titles.types" %> <%= link_to t("actions.add", scope: "decidim.admin"), "/admin/types/new", class: 'button tiny button--title' if allowed_to? :create, :type %></h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
        <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.scope.fields.name", scope: "decidim.admin") %></th>
            <th><%= t("types.fields.created_at", scope: "decidim.admin") %></th>
            <th><%= t("types.fields.updated_at", scope: "decidim.admin") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @types.each do |type| %>
            <tr>
              <td>
                <%= translated_attribute(type.name) %><br />
              </td>
              <td>
                <%= l type.created_at, format: :short %>
              </td>
              <td>
                <%= l type.updated_at, format: :short %>
              </td>
              <td class="table-list__actions">
                <% if allowed_to? :update, :type, type: type %>
                  <%= icon_link_to "pencil", "/admin/types/"+type.id.to_s+"/edit", t("actions.edit", scope: "decidim.admin"), class: "action-icon--edit", method: :get, data: {} %>
                <% end %>
                <% if allowed_to? :destroy, :type, type: type %>
                  <%= icon_link_to "circle-x", "/admin/types/"+type.id.to_s, t("actions.destroy", scope: "decidim.admin"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", scope: "decidim.admin") } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
